{
    "server": {
        "name": "rango-radio",
        "description": "Rango Radio API",
        "port": 3001,
        "host": "localhost",
        "contentDirectory": "audio",
        "logDirectory": "./logs",
        "logLevel": "debug",
        "cors": {
            "enabled": true,
            "origin": ["http://localhost:3000", "http://rangoradio.com"],
            "allowedMethods": ["GET", "POST", "PUT", "DELETE"],
            "allowedHeaders": ["Content-Type", "Authorization"]
        },
        "api": {
            "version": "1.0.0",
            "base": "/api",
            "routes": [
                {
                    "path": "/",
                    "method": "GET",
                    "handler": "getApiInfo"
                },
                {
                    "path": "/songs",
                    "method": "GET",
                    "handler": "getSongs"
                },
                {
                    "path": "/songs/:id",
                    "method": "GET",
                    "handler": "getSong"
                },
                {
                    "path": "/songs",
                    "method": "POST",
                    "handler": "createSong"
                },
                {
                    "path": "/songs/:id",
                    "method": "PUT",
                    "handler": "updateSong"
                },
                {
                    "path": "/songs/:id",
                    "method": "DELETE",
                    "handler": "deleteSong"
                }
            ]
        }
    },
    
